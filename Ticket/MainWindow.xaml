<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="TicketingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketingApp"
        mc:Ignorable="d"
        Title="Gestione Ticket" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left">
            <Button x:Name="SyncButton"
                    Content="Controlla nuovi ticket"
                    Click="SyncButton_Click"/>
            <Button x:Name="NewTicketButton"
                    Content="Nuovo ticket"
                    Click="NewTicketButton_Click"/>
            <Button x:Name="ClosedTicketsButton"
                    Content="Ticket chiusi"
                    Click="ClosedTicketsButton_Click"/>
            <Button x:Name="RefreshButton"
                    Content="Aggiorna"
                    Click="RefreshButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="TicketGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding Tickets}"
                  AutoGenerateColumns="True"
                  AutoGeneratingColumn="TicketGrid_AutoGeneratingColumn"
                  CellEditEnding="TicketGrid_CellEditEnding"
                  IsReadOnly="True"
                  SelectionUnit="Cell"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  VirtualizingPanel.ScrollUnit="Pixel"
                  ColumnWidth="SizeToCells"/>
    </Grid>
</Window>
