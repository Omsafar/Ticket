<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="TicketingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button x:Name="SyncButton"
                Content="Controlla nuovi ticket"
                Click="SyncButton_Click"
                DockPanel.Dock="Top"
                Margin="5"/>
        <Button x:Name="RefreshButton"
                Content="Aggiorna"
                Click="RefreshButton_Click"
                DockPanel.Dock="Top"
                Margin="5"/>
        <DataGrid x:Name="TicketGrid"
                  ItemsSource="{Binding Tickets}"
                  AutoGenerateColumns="True"
                  AutoGeneratingColumn="TicketGrid_AutoGeneratingColumn"
                  CellEditEnding="TicketGrid_CellEditEnding"
                  SelectionUnit="Cell"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  VirtualizingPanel.ScrollUnit="Pixel"/>
    </DockPanel>
</Window>
